{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Build settings
    "target": "ES5",
    "module": "ES2020",
    "newLine": "LF",
    "charset": "utf-8",
    "sourceMap": true,

    // Type declarations settings
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true
  },
  "include": ["./src"],
  "exclude": ["./src/**/*.spec.ts"]
}
