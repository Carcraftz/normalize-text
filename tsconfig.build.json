{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Build settings
    "newLine": "LF",
    "noEmitOnError": true,
    "outDir": "dist/",
    "sourceMap": true,

    // Type declarations settings
    "declaration": true,
    "declarationDir": "types/",
    "declarationMap": true
  },
  "include": ["src/"],
  "exclude": ["src/**/*.spec.ts"]
}
